{
	"semi": false,
	"useTabs": false,
	"singleQuote": true,	
	"trailingComma": "es5",
	"printWidth": 80,
	"tabWidth": 2,
	"bracketSameLine": true,
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"pluginSearchDirs": ["."],
	"overrides": [
		{
			"files": "*.svelte",
			"options": { "parser": "svelte" }
		},
		{
		  "files": "*.html",
		  "options": { "parser": "html" }
		}
	]
}
